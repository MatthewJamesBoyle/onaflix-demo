{
  "name": "Streaming Platform Dev Environment",
  "dockerFile": "Dockerfile",
  "forwardPorts": [3000, 8000, 3306],
  "postCreateCommand": "npm install && cd frontend && npm install && cd ../services/backend && npm install && cd ../database && npm install",
  "postStartCommand": "cd services/database && npm run start",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-sqlite",
        "mikestead.dotenv",
        "graphql.vscode-graphql",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        },
        "sqltools.connections": [
          {
            "name": "SQLite Database",
            "driver": "SQLite",
            "database": "${workspaceFolder}/services/database/database.sqlite"
          }
        ]
      }
    }
  },
  "features": {
    "node": "latest"
  },
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "Backend API"
    },
    "3306": {
      "label": "Database Service"
    }
  },
  "remoteUser": "node"
}