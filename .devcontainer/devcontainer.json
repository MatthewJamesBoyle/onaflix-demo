{
  "name": "Streaming Platform Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "forwardPorts": [3000, 8000, 3306],
  "onCreateCommand": "npm install && cd frontend && npm install && cd ../services/backend && npm install && cd ../database && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-sqlite",
        "mikestead.dotenv"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "sqltools.connections": [
          {
            "name": "SQLite Database",
            "driver": "SQLite",
            "database": "${workspaceFolder}/services/database/database.sqlite"
          }
        ]
      }
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "Backend API"
    },
    "3306": {
      "label": "Database Service"
    }
  },
  "remoteUser": "node"
}