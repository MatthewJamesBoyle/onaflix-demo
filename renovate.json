{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [],
  "enabledManagers": ["npm"],
  "includePaths": ["backend/catalog/package.json"],
  "packageRules": [
    {
      "matchPackageNames": ["jest", "@types/jest"],
      "enabled": true,
      "recreateWhen": "always"
    },
    {
      "matchPackageNames": ["*"],
      "excludePackageNames": ["jest", "@types/jest"],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "branchConcurrentLimit": 0,
  "recreateWhen": "always"
}
